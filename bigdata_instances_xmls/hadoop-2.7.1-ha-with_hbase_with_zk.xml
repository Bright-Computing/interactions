<hadoopConfig>
    <archive>hadoop-2.7.1.tar.gz</archive>
    <javahome>/usr/lib/jvm/jre/</javahome>
    <instance>
        <name>hadoop271_ha_withhb_withzk</name>
        <dataroot>/var/lib/hadoop/nozk/</dataroot>
        <namenodedatadirs>/var/lib/hadoop/hadoop271_ha_withhb_withzk/</namenodedatadirs>
        <datanodedatadirs>/var/lib/hadoop/hadoop271_ha_withhb_withzk/</datanodedatadirs>
        <security>
            <kmshost>node004</kmshost>
            <usessl>false</usessl>
            <sslonly>false</sslonly>
        </security>
        <namenode>
            <host>node001</host>
            <port>8020</port>
            <httpport>50070</httpport>
            <httpsport>50470</httpsport>
        </namenode>
        <secondarynamenode>
            <host>node002</host>
            <httpport>50090</httpport>
            <httpsport>50091</httpsport>
        </secondarynamenode>

        <ha enabled="true" auto="true">
          <nameserviceid>mycluster</nameserviceid>
          <namenodeid1>nn1</namenodeid1>
          <namenodeid2>nn2</namenodeid2>
          <namenode1>node001</namenode1>
          <namenode2>node002</namenode2>
          <namenodeport>8020</namenodeport>
          <namenodehttpport>50070</namenodehttpport>
          <namenodehttpsport>50470</namenodehttpsport>
          <journalnodes>node00[1..3]</journalnodes>
          <journalport>8485</journalport>
          <journalhttpport>8480</journalhttpport>
          <journalhttpsport>8481</journalhttpsport>
        </ha>

        <datanodes>
            <hosts>node001..node003</hosts>
            <port>50010</port>
            <ipcport>50020</ipcport>
            <httpport>50075</httpport>
            <httpsport>50475</httpsport>
            <nodemanagerlocalizerport>8040</nodemanagerlocalizerport>
            <nodemanagerwebappport>8042</nodemanagerwebappport>
            <nodemanagerwebapphttpsport>8044</nodemanagerwebapphttpsport>
            <nodemanagershuffleport>8091</nodemanagershuffleport>
        </datanodes>
        <yarnserver>
            <host>node003</host>
            <port>8032</port>
            <schedulerport>8030</schedulerport>
            <webappport>8088</webappport>
            <webapphttpsport>8090</webapphttpsport>
            <rtport>8031</rtport>
            <adminport>8033</adminport>
            <historyport>10020</historyport>
            <historywebappport>19888</historywebappport>
            <historywebapphttpsport>19890</historywebapphttpsport>
            <timelineport>10021</timelineport>
            <timelinewebappport>8188</timelinewebappport>
            <timelinewebapphttpsport>8190</timelinewebapphttpsport>
        </yarnserver>
	<zookeeper>
	  <archive>zookeeper-3.4.6.tar.gz</archive>
	  <hosts>node001,node002,node003</hosts>
	  <clientport>2181</clientport>
	  <serverport>2888</serverport>
	  <electionport>3888</electionport>
	</zookeeper>
	<hbase>
	  <archive>hbase-1.1.1-bin.tar.gz</archive>
	  <master>node005</master>
	  <masterport>60000</masterport>
	  <masterinfoport>60010</masterinfoport>
	  <regionservers>node001..node004</regionservers>
	  <regionserverport>60020</regionserverport>
	  <regionserverinfoport>60030</regionserverinfoport>
	</hbase>
    </instance>
</hadoopConfig>
